{
  "compilerOptions": { 
      "emitDecoratorMetadata": true, 
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "module": "commonjs", 
      "target": "es6",
      "sourceMap": true,
      "outDir": "build",
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "types": [
        "mocha",
        "node"
      ]
  },
  "exclude": [
      "node_modules",
      "dist",
      ".vscode",
      "docs"
  ]
} 